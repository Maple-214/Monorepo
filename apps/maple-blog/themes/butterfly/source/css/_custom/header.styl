
#nav 
  box-shadow: 0 4px 30px rgba(0,0,0,.07);
  backdrop-filter: blur(24px);
  background: transparent;
#nav-right
  flex:1 1 auto
  justify-content: flex-end
  margin-left: auto
  display: flex
  flex-wrap:nowrap
#page-name
  font-size: 18px
  padding: 8px 30px
  position: relative
#page-name::after
  font-size:18px;
  position: absolute;
  width:100%;
  height:100%;
  border-radius: 8px;
  color:white!important;
  top:0;
  left:0;
  content:'Back To Top';
  background-color: var(--btn-bg);
  transition: all .3s;
  opacity: 0;
  // box-shadow: 0 0 3px var(--btn-bg);
#page-name:hover:after
  opacity: 1;